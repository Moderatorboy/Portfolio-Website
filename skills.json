<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Skills & Abilities</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #3b0a8f, #6f42c1);
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 20px;
    }

    h2 {
      font-size: 28px;
      margin-bottom: 20px;
    }

    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      gap: 20px;
      width: 100%;
      max-width: 900px;
    }

    .skill-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 12px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      transition: transform 0.2s, background 0.2s;
    }

    .skill-card:hover {
      transform: scale(1.05);
      background: rgba(255, 255, 255, 0.2);
    }

    .skill-icon {
      width: 48px;
      height: 48px;
      object-fit: contain;
      background: #fff;   /* White background so black icons are visible */
      border-radius: 8px;
      padding: 6px;
      margin-bottom: 8px;
    }

    .skill-name {
      font-size: 14px;
      text-align: center;
      color: #fff;
    }
  </style>
</head>
<body>

  <h2>âš¡ Skills & Abilities</h2>
  <div class="skills-grid" id="skills-container"></div>

  <script>
    const skills = [
      { "name": "Canva", "icon": "https://img.icons8.com/fluency/48/000000/canva.png" },
      { "name": "Youtube", "icon": "https://img.icons8.com/fluency/48/000000/youtube.png" },
      { "name": "VN", "icon": "https://img.icons8.com/?size=100&id=B8HxnSBBGpvx&format=png&color=000000" },
      { "name": "Firebase", "icon": "https://img.icons8.com/color/48/000000/firebase.png" },
      { "name": "Android", "icon": "https://img.icons8.com/fluency/48/000000/android-os.png" },
      { "name": "HTML5", "icon": "https://img.icons8.com/color/48/000000/html-5--v1.png" },
      { "name": "JavaScript", "icon": "https://img.icons8.com/color/48/000000/javascript--v1.png" },
      { "name": "Heroku", "icon": "https://img.icons8.com/color/48/000000/heroku.png" },
      { "name": "Netlify", "icon": "https://img.icons8.com/external-tal-revivo-shadow-tal-revivo/48/000000/external-netlify-a-cloud-computing-company-that-offers-hosting-and-serverless-backend-services-for-static-websites-logo-shadow-tal-revivo.png" },
      { "name": "GitHub", "icon": "https://img.icons8.com/glyph-neue/48/ffffff/github.png" },
      { "name": "Vercel", "icon": "https://img.icons8.com/?size=100&id=2xFS7aynbwiR&format=png&color=000000" },
      { "name": "Wix", "icon": "https://img.icons8.com/?size=100&id=cQfKnWABsKk9&format=png&color=000000" },
      { "name": "Odoo", "icon": "https://odoocdn.com/openerp_website/static/src/img/assets/png/odoo_logo.png" }
    ];

    const container = document.getElementById("skills-container");

    skills.forEach(skill => {
      const card = document.createElement("div");
      card.className = "skill-card";

      const img = document.createElement("img");
      img.src = skill.icon;
      img.alt = skill.name;
      img.className = "skill-icon";

      const name = document.createElement("div");
      name.className = "skill-name";
      name.textContent = skill.name;

      card.appendChild(img);
      card.appendChild(name);
      container.appendChild(card);
    });
  </script>

</body>
</html>
